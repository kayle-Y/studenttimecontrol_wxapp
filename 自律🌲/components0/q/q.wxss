.card {
  background-color: white;
  height: 18%;
  border-radius: 10px;
  width: 100%;
  margin-top: 25px;
  color: olive;
  text-align: justify;
  line-height: normal;
 
  
}
.topics{
  background-color:rgb(243, 239, 239);
  height: 100%;
  overflow: hidden;
}
.card-title{
  display: block;
  margin-top: 3px;
  margin-left: 8px;
  font-size: 17px;
  font-weight: bolder;
}
.flex{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 17px;
}
.input{
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.change{
  padding: 10rpx 20rpx;
  font-size: 17px;
  color: #fff;
  background: #0080FF;
  border-radius: 10rpx;
}