.card {
  background-color: white;
  height: 18%;
  border-radius: 10px;
  width: 100%;
  margin-top: 25px;
  color: olive;
  text-align: justify;
  line-height: normal;
 
  
}
.topics{
  background-color:rgb(243, 239, 239);
  height: 100%;
  overflow: hidden;
}
.card-title{
  display: block;
  margin-top: 3px;
  margin-left: 8px;
  font-size: 17px;
  font-weight: bolder;
}

.hoverButton {
  font-size: 14px;
  word-break: break-all;
  box-shadow: 0 8px 17px 0 rgba(237, 202, 202, 0.2), 0 6px 20px 0 rgba(0, 0, 0, .19);
  margin: 0;
  padding: 0;
  box-sizing: content-box;
  position: fixed;
  overflow: visible;
  z-index: 50;
  width: 56px;
  line-height: 54px;
  text-align: center;
  border-radius: 100%;
  border: 1px solid rgba(0, 0, 0, .05);
  transform-origin: center bottom;
  right: 10rpx;
  bottom: 10rpx;
  color: #883232;
  background: #24A364;
}
