
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
.nav{
  background-color: white;
  height: 6%;
  border-radius: 10px;
  width: 100%;
  margin-top: 55px;
  color: olive;
  text-align: justify;
  line-height: normal;
  display: flex;
  justify-content: space-around;

}
.now{
  color: #FF2302;
}
.cnt{
  width: 700rpx;
}
.card {
  background-color: white;
  height: 75%;
  border-radius: 0px;
  width: 100%;
  margin-top: 3px;
  color: olive;
  text-align: justify;
  line-height: normal;
  
}

.contain {
  height: 100%;
  width: 100%;
  display: flex;
  margin-bottom: 60px;
  /* justify-content: center; */
  flex-direction: column;
  align-items: center;
  overflow: inherit;
}
.card-title{
  display: block;
  margin-top: 3px;
  margin-left: 8px;
  font-size: 20px;
  font-weight: bolder;
}
.card-content{
  display: flex;
  justify-content: space-between;
  margin-top: 3px;
}
.card-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
  color: olive;
  text-align:center;
  line-height: normal;
  font-weight: normal;
}
.item-title{
  font-size: 13px;
}
.item-content{
  display: inline-block;
}
.item-data{
  font-size: 20px;
}
.item-unit{
  font-size: 12px;
  position: relative;
  bottom: 0px;
}
.hoverButton {
  font-size: 14px;
  word-break: break-all;
  box-shadow: 0 8px 17px 0 rgba(237, 202, 202, 0.2), 0 6px 20px 0 rgba(0, 0, 0, .19);
  margin: 0;
  padding: 0;
  box-sizing: content-box;
  position: fixed;
  overflow: visible;
  z-index: 50;
  width: 56px;
  line-height: 54px;
  text-align: center;
  border-radius: 100%;
  border: 1px solid rgba(0, 0, 0, .05);
  transform-origin: center bottom;
  right: 50rpx;
  bottom: 150rpx;
  color: #ffffff;
  background: #24A364;
}

.plus {
  box-shadow: 0 12px 15px 0 rgba(0, 0, 0, .24), 0 17px 50px 0 rgba(0, 0, 0, .19);
  transform: scale(1.02);
}