.hoverButton {
  font-size: 14px;
  word-break: break-all;
  box-shadow: 0 8px 17px 0 rgba(233, 221, 56, 0.76), 0 6px 20px 0 rgba(0, 0, 0, .19);
  margin: 0;
  padding: 0;
  box-sizing: content-box;
  position: fixed;
  overflow: visible;
  z-index: 50;
  width: 56px;
  line-height: 54px;
  text-align: center;
  border-radius: 100%;
  border: 1px solid rgba(0, 0, 0, .05);
  transform-origin: center bottom;
  right: 50rpx;
  bottom: 150rpx;
  color: #ffffff;
  background: #05df72;
}

.plus {
  box-shadow: 0 12px 15px 0 rgba(0, 0, 0, .24), 0 17px 50px 0 rgba(0, 0, 0, .19);
  transform: scale(1.02);
}