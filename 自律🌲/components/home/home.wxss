.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timer_progress_mask {
  position: absolute;
  width: 260px;
  height: 260px;
  top: 100px;
  left: 30px;
  bottom: 1px;
  right: 1px;
  border: 6px solid #fff;
  opacity: .8;
  border-radius: 50%;
}


  
.timeText{
 
  position: relative;
  top: 490rpx;
  width: 500rpx;
  line-height: 100rpx;
  text-align: center;
   border-radius: 10px;
   left:130rpx;
   font-size:30px;
  }
.input{
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;

}
.flex{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;

}
.hoverButton {
  font-size: 14px;
  word-break: break-all;

  margin: 0;
  padding: 0;
  box-sizing: content-box;
  position: fixed;
  overflow: visible;
  z-index: 50;
  width: 56px;
  line-height: 54px;
  text-align: center;
  border-radius: 100%;
  border: 1px solid rgba(0, 0, 0, .05);
  transform-origin: center bottom;
  right: 50rpx;
  bottom: 150rpx;
  color: #f1f3f5;
  background: #6953e9;
}
